{
    "private": true,
    "version": "0.0.0",
    "name": "coconut-framework",
    "scripts": {
        "build-lib": "node ./scripts/build/index.js",
        "build-lib:test": "cross-env NODE_ENV=test node ./scripts/build/index.js",
        "build-dts": "node ./scripts/build/build-dts.js",
        "build-dts:test": "cross-env NODE_ENV=test node ./scripts/build/build-dts.js",
        "build": "pnpm run build-lib && pnpm run build-dts",
        "build:test": "pnpm run build-lib:test && pnpm run build-dts:test",
        "test:coconut": "jest -c ./scripts/jest/jest.coconut.config.js",
        "test:react": "jest -c ./scripts/jest/jest.react.config.js",
        "test:rollup-plugin": "jest -c ./scripts/jest/jest.rollup-plugin.config.js",
        "test:webpack-loader": "jest -c ./scripts/jest/jest.webp-loader.config.js",
        "test:all": "pnpm run test:webpack-loader && pnpm run test:rollup-plugin && pnpm run test:coconut && pnpm run test:react",
        "test": "pnpm run build:test && pnpm run test:all",
        "prettier": "prettier --write 'packages/**/*.*' 'package.json'",
        "prettier:check": "prettier --check 'packages/**/*.*'",
        "prepare": "pnpm exec husky init",
        "ci:publish": "pnpm run build && pnpm publish -r --no-git-checks"
    },
    "keywords": [],
    "author": "jiangchenguang",
    "license": "MIT",
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.24.1",
        "@babel/plugin-transform-react-jsx": "^7.23.4",
        "@babel/preset-env": "^7.25.3",
        "@changesets/cli": "^2.29.7",
        "@cocojs/bundle-rollup": "workspace:*",
        "@microsoft/api-extractor": "^7.52.7",
        "@playwright/test": "^1.57.0",
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-replace": "^6.0.1",
        "@rollup/plugin-typescript": "^11.1.6",
        "@testing-library/dom": "^10.4.0",
        "@types/jest": "^29.5.12",
        "@types/node": "20.0.0",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.10",
        "prettier": "3.3.3",
        "rollup": "^4.24.0",
        "tslib": "^2.6.3",
        "typescript": "5.3.3"
    },
    "pnpm": {
        "overrides": {
            "cross-spawn": "^7.0.5"
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "packageManager": "pnpm@10.20.0"
}
