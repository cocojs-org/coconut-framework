{
    "private": true,
    "scripts": {
        "build-lib": "node ./scripts/build/index.js",
        "build-lib:test": "cross-env NODE_ENV=test node ./scripts/build/index.js",
        "build-dts": "node ./scripts/build/build-dts.js",
        "build-dts:test": "cross-env NODE_ENV=test node ./scripts/build/build-dts.js",
        "build": "pnpm run build-lib && pnpm run build-dts",
        "build:test": "pnpm run build-lib:test && pnpm run build-dts:test",
        "test:coconut": "jest -c ./scripts/jest/jest.coconut.config.js",
        "test:react": "jest -c ./scripts/jest/jest.react.config.js",
        "test": "pnpm run build:test && pnpm run test:coconut && pnpm run test:react",
        "prettier": "prettier --write 'packages/**/*.*' 'package.json'",
        "prettier:check": "prettier --check 'packages/**/*.*'",
        "_modifyPkgVersion": "node scripts/publish/modify-pkg-version.js",
        "updateVersion": "pnpm run test && pnpm run _modifyPkgVersion",
        "prepare": "husky install && ts-patch install -s"
    },
    "keywords": [],
    "author": "jiangchenguang",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.26.4",
        "@babel/core": "^7.24.3",
        "@babel/parser": "^7.26.7",
        "@babel/plugin-proposal-decorators": "^7.24.1",
        "@babel/plugin-syntax-decorators": "^7.25.9",
        "@babel/plugin-transform-class-properties": "^7.25.9",
        "@babel/plugin-transform-react-jsx": "^7.23.4",
        "@babel/preset-env": "^7.25.3",
        "@babel/preset-typescript": "^7.24.7",
        "@cocojs/type-extractor": "^0.0.16",
        "@microsoft/api-extractor": "^7.52.7",
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-replace": "^6.0.1",
        "@rollup/plugin-typescript": "^11.1.6",
        "@testing-library/dom": "^10.4.0",
        "@types/jest": "^29.5.12",
        "@types/node": "20.0.0",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "glob": "^11.0.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsonfile": "^6.1.0",
        "lint-staged": "^15.2.10",
        "prettier": "3.3.3",
        "rollup": "^4.24.0",
        "ts-jest": "^29.2.5",
        "ts-patch": "3.1.2",
        "tslib": "^2.6.3",
        "typescript": "5.3.3"
    },
    "pnpm": {
        "overrides": {
            "cross-spawn": "^7.0.5"
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
