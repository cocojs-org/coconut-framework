{
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dts-tmp",
        "declaration": true,
        "emitDeclarationOnly": true,
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "node16",
        "moduleResolution": "node16",
        "skipLibCheck": true,
        "typeRoots": ["../../types", "./node_modules/@types"],
        "paths": {
            "@cocojs/bundle-webpack": ["../coco-bundle-webpack"],
            "@cocojs/bundle-rollup": ["../coco-bundle-rollup"]
        }
    },
    "include": ["src"],
    "references": [
        { "path": "../coco-bundle-webpack" },
        { "path": "../coco-bundle-rollup" }
    ]
}
